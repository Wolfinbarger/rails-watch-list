 <%= render 'components/nav' %>
<div class="container">
  <div class="row mb-3">
    <div class="d-flex flex-row align-items-center justify-content-between">
      <h2 class="center mr-auto"> <%= @list.name.upcase %></h2>
      <%= link_to list_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete"  do %>
        <i class="fa-solid fa-trash-can fa-lg" style="color: #ff0000;"></i>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="cards">
    <% @list.movies.each do |movie| %>
      <div class="card-pick">
        <div class="card-pick-info">
          <h2><%= movie.title %></h2>
          <p><%= movie.overview %></p>
        </div>
      </div>
    <% end %>
    <%= link_to new_list_bookmark_path(@list), class:"nav-link" do  %>
      <div class="card-pick">
        <i class="fa-solid fa-plus fa-5x" style="color: #29a0db;"></i>
      </div>
    <% end %>
  </div>
</div>
